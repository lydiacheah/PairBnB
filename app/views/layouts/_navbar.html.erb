<div id="header">
  <div class="container-fluid">
  <nav class="navbar navbar-fixed-top">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><%= image_tag '0.png' %></a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
          <% if signed_in? %>
            <li><%= link_to 'Edit Profile', edit_user_path(current_user)%></li>
            <li><%= link_to 'Create Listing', new_listing_path(current_user)%></li>
            <li><%= link_to t(".sign_out"), sign_out_path, method: :delete %></li>
          <% else %>
            <li><%= content_tag(:a, "Sign Up", class: "sign-up-button") %></li>
            <li><%= content_tag(:a, "Sign In", class: "sign-in-button") %></li>
          <% end %>
      </ul>
    </div>
  </nav>
  </div>
</div>  
<div class="background"></div>
<div class="box">
  <div class="new-forms sign-in-form">
    <%= render partial: '/sessions/form' %>
  </div>
  <div class="new-forms sign-up-form">
    <button class="loginBtn loginBtn-facebook">
      <a href="/auth/facebook">Continue with Facebook</a>
    </button>

    <%= form_for User.new do |form| %>
      <%= render partial: '/users/form', object: form %>

      <div class="other-links">
        Already have an account? 
        <br>
        <button class="btn btn-link" id="sign-in-btn" type="button">sign in</button>
      </div>
    <% end %>
  </div>
</div>